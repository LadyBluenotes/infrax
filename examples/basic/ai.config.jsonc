{
  "$schema": "../../schemas/ai.config.schema.json",
  "version": 1,
  "include": {
    "rulesDir": "ai/rules",
    "agentsDir": "ai/agents",
    "skillsDir": "ai/skills",
    "mcpDir": "ai/mcp",
    "contextsDir": "ai/contexts",
    "modelsDir": "ai/models"
  },
  "defaults": {
    "context": "context:node-typescript"
  },
  "layers": {
    "base": {
      "enabled": true
    },
    "context": {
      "enabled": true
    },
    "model": {
      "enabled": true
    },
    "cli": {
      "enabled": true
    }
  },
  "enable": {
    "rules": [
      "rule:code-style",
      "rule:testing",
      "rule:documentation"
    ],
    "agents": [
      "agent:coding"
    ],
    "skills": [
      "skill:fs-read",
      "skill:fs-write"
    ],
    "mcpServers": [
      "mcp:filesystem"
    ]
  },
  "disable": {
    "rules": [],
    "agents": [],
    "skills": [],
    "mcpServers": []
  },
  "policy": {
    "allowMissingDependencies": false,
    "allowOverrides": true
  },
  "imports": {
    "agentsMd": {
      "enabled": true,
      "mode": "repo-root-only",
      "includeIn": "claude"
    }
  }
}